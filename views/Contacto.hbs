<body>
    <div class="contactoTitulo"><h1>Ponte en Contacto</h1></div>
        <div class="formStyle">
            <form action="/Contacto" method="POST"> 
            <!--Agregar en input atributo name="" p/func. correcto form -->
                <label for="name"> Nombre </label> 
                <input type="text" id="name" name="name" placeholder="Ingrese su nombre" value = "{{validData.name}}">
                <label for="lastName">Apellido</label>
                <input type="text" id="lastName" name="lastName" placeholder="Ingrese su apellido" value = "{{validData.lastName}}">
                <label for="email">Correo Electrónico</label>
                <input type="text" id="email" name="email" placeholder="Ingrese correo electrónico" value= "{{validData.email}}">
                <label for="number">Número Telefónico</label>
                <input type="number" id="number" name="number" placeholder="Ingrese número de contacto" value = "{{validData.number}}">
                ¿Cómo nos conociste?: 
                <select id="encuesta" name="encuesta">
                    <option>Pagina Web</option>
                    <option>Redes Sociales</option>
                    <option>Publicidad</option>
                    <option>Recomendación</option>
                    <option>Otros</option>
                    </select>
                <label for="message"> Ingrese su mensaje </label>
                <textarea name="message" id="message" cols="30" rows="10" "{{validData.message}}"> </textarea>
            <input type="submit" value="Enviar"> 
        </form>
    {{#each warningErr}}                                                   {{!visualizamos msj de validaciones de formulario p. usuario}}
    <p>{{msg}}</p>
    {{/each}}
    </div>
    </section>
</body>
</html>
